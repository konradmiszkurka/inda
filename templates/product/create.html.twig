{% extends 'base.html.twig' %}

{% block page_content %}
{{ form_start(form) }}
<div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
</div>

<div class="row">
    <div class="col">
        {{ form_row(form.name) }}
    </div>
    <div class="col" id="some-custom-id">
        {{ form_row(form.price) }}
    </div>
    <div class="col" id="some-custom-id-desc">
        {{ form_row(form.description) }}
    </div>
</div>
{{ form_end(form) }}
{% endblock %}